<mvc:View
    controllerName="zetpmhours.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"    
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	  
	  >

 	<SplitApp
		id="SplitAppDemo"
		initialDetail="detail"
		initialMaster="master">
		<detailPages>
			<semantic:SemanticPage
				id="detail1"
				title="{i18n>InitialTitle2}"
				backgroundDesign= "Solid"
				showNavButton="false"
				navButtonPress=".onPressDetailBack">

				<semantic:titleHeading>
				<Title id="Title1"
						text="{i18n>worklistTitle}"
						level="H2"/>
				</semantic:titleHeading>   

				<semantic:titleCustomTextActions>
						<Button id="IdBtnMostrar" icon="sap-icon://kpi-corporate-performance" 
											tooltip="Mostrar Reportes" 
											text="{i18n>buttonDisplay}" 
											type="Accept"
											press="onDisplay" visible="true" />                             
				</semantic:titleCustomTextActions> 

				<semantic:headerContent>
					<VBox alignItems="Center"  id="WorklistBox1">

					<HBox alignItems="Center" id="WorklistBox4"> 
					<Label text="Taller: " labelFor="IdTaller" visible="true" />
					<ComboBox
								required="true" 
								id="IdTaller"                                    
								width="200px"                                      
								items="{
										path: 'ReportModel>/Taller',
										sorter: { path: 'Key' }
									}"  >
								<core:Item key="{ReportModel>Key}" text="{ReportModel>Value}" />                         
						</ComboBox>  
					</HBox>  

					<HBox alignItems="Center" id="WorklistBox2">
						<Label id="WorkListLabel" text="Desde: " labelFor="Desde" visible="true" />
						<DatePicker	id="Desde"			                	
										value="{path: 'ReportModel>/Parameters/Desde', type:'sap.ui.model.type.Date' ,
												formatOptions: { style: 'medium', strictParsing: true}   }"  
										displayFormat="medium"                                                     
										valueFormat="dd-mm-yyyy"
										change="handleChange"                            
										visible="true" />                             
					</HBox>                   
					<HBox alignItems="Center" id="WorklistBox3">     
					<Label text="Hasta: " labelFor="Hasta" visible="true"/>
						<DatePicker	id="Hasta"
										value="{path: 'ReportModel>/Parameters/Hasta', type:'sap.ui.model.type.Date' ,
												formatOptions: { style: 'medium', strictParsing: true}   }"  
										displayFormat="medium"                                                     
										valueFormat="dd-mm-yyyy"
										change="handleChange"
										visible="true"/> 
									
					</HBox>
					
					</VBox> 
				</semantic:headerContent> 

				<semantic:content>     
				<IconTabBar
							id="iconTabBar"
							headerBackgroundDesign="Transparent"
							class="sapUiResponsiveContentPadding"
							binding="{ReportModel}"
							select=""
							selectedKey="">				
							<items>
								<IconTabFilter id="OrderTab" text="Ordenes PM" key="key1">
									<mvc:XMLView id="OrdenView1" viewName="zetpmhours.view.Orden"></mvc:XMLView>
								</IconTabFilter>						

								<IconTabFilter id="PuestoTab" text="Tiempo Puesto Trabajo" key="key2">
									<mvc:XMLView id="PuestoView1" viewName="zetpmhours.view.Puesto"></mvc:XMLView>
								</IconTabFilter>	

								<IconTabFilter id="PersonalTab" text="Tiempo Personal" key="key3">
									<mvc:XMLView id="PersonalView1" viewName="zetpmhours.view.Personal"></mvc:XMLView>
								</IconTabFilter>                 					
														
							</items>                
						</IconTabBar> 
			</semantic:content>     
			<semantic:sendEmailAction>
				<semantic:SendEmailAction id="shareEmail1" press=".onShareEmailPress"/>
				</semantic:sendEmailAction> 
			</semantic:SemanticPage>     

			<Page
				id="detail2"
				title="{i18n>InitialTitle1}"
				backgroundDesign= "Solid"
				showNavButton="false"
				navButtonPress=".onPressDetailBack">
			</Page>
		</detailPages>
		<masterPages>
			<Page
				id="master2"
				title="{i18n>MasterTitle}"
				backgroundDesign="List"
				showNavButton="false"
				navButtonPress=".onPressMasterBack">
				<List itemPress=".onListItemPress">
					<items>
						<StandardListItem title="{i18n>InitialTitle2}" type="Active" custom:to="detail1" icon="sap-icon://customer-order-entry"/>
						<StandardListItem title="{i18n>InitialTitle1}" type="Active" custom:to="detail2" icon="sap-icon://business-objects-experience"/>
					</items>
				</List>
			</Page>
		</masterPages>
	</SplitApp>
    
</mvc:View>