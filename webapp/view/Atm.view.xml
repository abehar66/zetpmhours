<mvc:View 
  id="AtmView"  
  controllerName="zetpmhours.controller.Worklist"  
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core" 
  xmlns:m="sap.m" 
  xmlns:l="sap.ui.layout" >  
  <f:SimpleForm		
		id="AtmForm"
		columnsL="3"
		columnsM="3"
		editable="true"
		layout="ResponsiveGridLayout">		
		<f:content>	
             <Table
                id="tableAtm"
                width="auto"
                items="{
                    path: 'ReportModel>/AtmSet',
                    sorter: {
                        path: 'Fecha',
                        descending: true
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar  >
                        <Title
                            id="tableHeaderAtm"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer id="headerSpaceOrdenAtm"/>
                        
                        
                         
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Numero Documento" />
                    </Column>  
                    <Column>
                        <Text text="AÃ±o Documento" />
                    </Column>      
                    <Column >
                        <Text text="Orden" />
                    </Column>                          
                    <Column>
                        <Text text="Material" />
                    </Column>      
                    <Column>
                        <Text text="Fecha de la Orden" />
                    </Column>      
                         
                </columns>

                <items>
                    <ColumnListItem>                                              
                        <Text text="{ReportModel>Mblnr}"/>
                        <Text text="{ReportModel>Mjahr}"/>
                        <Text text="{ReportModel>Aufnr}"/>
                        <Text text="{ReportModel>Matnr} ({ReportModel>MatnrDescr})"/>
                        <Text text="{
                                        path: 'ReportModel>Fecha',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: {
                                        style: 'medium',
                                        UTC:true
                                        }
                                    }"  />
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:SimpleForm>	
</mvc:View> 