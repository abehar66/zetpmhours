<mvc:View 
  id="PuestoView"  
  controllerName="zetpmhours.controller.Worklist"  
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core" 
  xmlns:m="sap.m" 
  xmlns:l="sap.ui.layout" >  
  <f:SimpleForm		
		id="PuestoForm"
		columnsL="3"
		columnsM="3"
		editable="true"
		layout="ResponsiveGridLayout">		
		<f:content>	
             <Table
                id="tablePuesto"
                width="auto"
                items="{
                    path: 'ReportModel>/WorkcenterSet',
                    sorter: {
                        path: 'Workcenter',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar id="headerflowPuesto" >
                        <Title
                            id="tableHeaderPuesto"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer id="headerSpacerPuesto" />
                        
                        <SearchField
                            id="searchFieldPuesto"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    id="headerLayout"
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                         
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="PuestonameColumn1">
                        <Text text="{i18n>tableColumnWorkcenterTitle}" id="Puestocol1"/>
                    </Column>                      
                    <Column id="PuestonameColumn2">
                        <Text text="{i18n>tableColumnTimeAgreededAverageTitle}" id="Puestocol2" width="30%"/>
                    </Column>                                        
                    <Column id="PuestonameColumn4">
                        <Text text="{i18n>tableColumnTimeAverageTitle}" id="Puestocol4" width="30%"/>
                    </Column>                    
                </columns>

                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItemWorkcenter"
                        type="Navigation"
                        press=".onPress">                                              
                        <Text id="_IDGenPuestoText1" text="{ReportModel>Workcenterdescr}"/>
                        <Text id="_IDGenPuestoText2" text="{ReportModel>Timeagreeded}"/>                        
                        <Text id="_IDGenPuestoText4" text="{ReportModel>Timeaverage}"/>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:SimpleForm>	
</mvc:View> 